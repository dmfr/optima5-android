<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xpressfile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dip"
    android:gravity="center_horizontal" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:id="@+id/xpressfile_filefields"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="30dip"
            android:shrinkColumns="0"
            android:stretchColumns="2" >

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/crm_row"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/crm_label"
                    style="@android:style/TextAppearance.Medium"
                    android:text="http(s) URL" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/crm_text"
                    style="@style/TextAppearance.EditEvent_Value"
                    android:singleLine="true" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/crm_row"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/crm_label"
                    style="@android:style/TextAppearance.Medium"
                    android:paddingLeft="12dp"
                    android:text="Domain" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/crm_text"
                        style="@style/TextAppearance.EditEvent_Value"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </FrameLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/crm_row"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/crm_label"
                    style="@android:style/TextAppearance.Medium"
                    android:paddingLeft="12dp"
                    android:text="S-domain" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/crm_text"
                        style="@style/TextAppearance.EditEvent_Value"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </FrameLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_vertical" >

                <TextView
                    style="@android:style/TextAppearance.Medium"
                    android:text="D/L Timeout" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/srv_dl_timeout"
                        style="@style/TextAppearance.EditEvent_SpinnerButton"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </FrameLayout>
            </TableRow>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TableRow
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_vertical" >

                <TextView
                    style="@android:style/TextAppearance.Medium"
                    android:text="Pull Timeout" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/srv_pull_timeout"
                        style="@style/TextAppearance.EditEvent_SpinnerButton"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </FrameLayout>
            </TableRow>
            </TableLayout>
    </ScrollView>

</FrameLayout>